scalar Time
scalar Upload

type File {
  name: String!
  key: String!
  type: String!
  isDir: Boolean!
  size: Int
  updated_at: Time
}

extend type Query {
  files(path: String!, name: String, isDir: Boolean): [File!]!
}

extend type Mutation {
  uploadFiles(path: String!, files: [Upload!]!): [File!]!
  moveFile(key: String!, destination: String!): String!
  copyFile(key: String!, destination: String!): String!
  makeDir(key: String!): String!
  removeFiles(keys: [String!]!): [String!]!
}
